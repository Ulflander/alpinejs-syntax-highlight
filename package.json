{
  	"name": "alpinejs-syntax-highlight-2025",
	"displayName": "Alpine.js Syntax Highlight",
	"description": "Javascript syntax highlighting for Alpine.js x- attributes w/ tsx support",
	"author": "Greg Ransons",
	"license": "MIT",
	"version": "1.0.1",
	"icon": "assets/alpine_logo.png",
	"publisher": "sperovita",
	"repository": {
		"type": "git",
		"url": "https://github.com/Ulflander/alpinejs-syntax-highlight"
	},
	"keywords": [
		"alpine",
		"alpinejs",
		"alpine.js"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Programming Languages"
	],
	"contributes": {
		"languages": [
			{
			  "id": "inline-alpinejs"
			}
		],
		"grammars": [
			{
				"language": "inline-alpinejs",
				"path": "./syntaxes/injection.json",
				"scopeName": "html.alpinejs.attribute",
				"injectTo": [
					"text.html.derivative", 
					"text.html.php", 
					"text.html.twig",
            		"source.tsx"
				],
				"embeddedLanguages": {
					"meta.embedded.inline.alpinejs": "javascript"
				}
			}
		]
	}
}
